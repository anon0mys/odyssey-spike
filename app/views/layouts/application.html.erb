<!DOCTYPE html>
<html>
  <head>
    <title>OdysseySpike</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav class='main-nav'>
      <div class='main-links'>
        <%= button_to 'My Stories', stories_path, method: :get%>
      </div>
      <div class='profile'>
        <% if current_user %>
          <h1>You are Logged In, <%= current_user.username %></h1>
          <%= button_to 'Logout', logout_path, method: :delete %>
        <% else %>
          <%= button_to 'Sign Up', new_user_path, method: :get%>
          <%= button_to 'Login', login_path, method: :get%>
        <%end%>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
